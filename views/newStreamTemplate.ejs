<script id="streams-modal-new-stream-template" 
        type="text/x-handlebars-template">
  <tr id="tr-{{stream}}" 
      class="streams-modal-table-tr"
      data-stream-name="{{stream}}">
    <td colspan="2">
      <div class="stream-row-container">
        <input id="streams_{{stream}}"
               type="hidden"
               value="{{stream}}"
               data-stream-name="{{stream}}">
               
        <input id="streams_{{stream}}" 
                type="checkbox" 
                name="streams[]" 
                value="{{stream}}"
                checked="checked"
                data-stream-name="{{stream}}"
                class="form-check-input me-1">
        <label for="streams_{{stream}}">{{stream}}</label>
      </div>
      <div class="float-end">
        <a href="javascript:;"
           onclick=""
           class="btn btn-danger"
           title="Remove this stream.">
          <i class="fa fa-trash"></i>
        </a>
        <a href="javascript:;"
           onclick="window.open('https://www.twitch.tv/popout/{{stream}}/chat', '', 'width=400,height=screen.height');"
           class="btn btn-primary"
           title="Open a chat popout for this stream.">
          <i class="far fa-comment-dots"></i>
        </a>
        <a href="https://www.twitch.tv/{{stream}}"
            target="_blank"
            title="Open this stream on Twitch."
            class="btn btn-purple">
          <i class="fab fa-twitch"></i>
        </a>
      </div>
    </td>
  </tr>  
</script>

<script id="new-stream-template" 
        type="text/x-handlebars-template">
  <span id="stream-{{stream}}-video"
        class="stream"
        data-stream-name="{{stream}}">
    <iframe src="https://player.twitch.tv/?muted=true&channel={{stream}}&parent=www.manytwitch.app"
            allowfullscreen="true"
            scrolling="no"
            class="stream-iframe"
            title="{{stream}}">
    </iframe>
  </span>
</script>